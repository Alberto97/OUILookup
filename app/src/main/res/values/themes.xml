<resources>
    <!-- Base application theme. -->
    <style name="Theme.OUILookup" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_500</item>
    </style>

    <style name="Theme.OUILookup.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OUILookup.Splashscreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.OUILookup.NoActionBar</item>
    </style>
</resources>